# ─── Database ────────────────────────────────────────────────────────────────
POSTGRES_PASSWORD=changeme_strong_password
DATABASE_URL=postgresql://cordis:changeme_strong_password@localhost:5432/cordis

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_PASSWORD=changeme_redis_password
REDIS_URL=redis://:changeme_redis_password@localhost:6379

# ─── JWT ──────────────────────────────────────────────────────────────────────
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=replace_with_64_byte_hex_string_access
JWT_REFRESH_SECRET=replace_with_64_byte_hex_string_refresh
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d

# ─── Voice Server ─────────────────────────────────────────────────────────────
VOICE_SERVER_SECRET=replace_with_32_byte_hex_string
SERVER_PUBLIC_IP=your.vps.ip.address

# ─── App URLs ─────────────────────────────────────────────────────────────────
API_URL=https://api.cordis.app
VOICE_URL=https://voice.cordis.app
GATEWAY_URL=wss://api.cordis.app/gateway
CORS_ORIGIN=https://cordis.app

# ─── Vite (frontend env vars - must be prefixed VITE_) ────────────────────────
VITE_API_URL=https://api.cordis.app
VITE_VOICE_URL=https://voice.cordis.app
VITE_GATEWAY_URL=wss://api.cordis.app/gateway

# ─── Portainer ────────────────────────────────────────────────────────────────
PORTAINER_WEBHOOK_URL=https://portainer.your-domain.com/api/webhooks/YOUR_WEBHOOK_ID
HEALTH_CHECK_URL=https://api.cordis.app
