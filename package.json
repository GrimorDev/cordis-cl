{
  "name": "cordis",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.7.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "migrate": "pnpm --filter @cordis/server run migrate"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "argon2",
      "esbuild",
      "mediasoup"
    ]
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "@typescript-eslint/parser": "^8.19.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0"
  }
}
