{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cordis",
  "version": "0.0.1",
  "identifier": "app.cordis.desktop",
  "build": {
    "beforeDevCommand": "pnpm --filter @cordis/web dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm --filter @cordis/web build",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Cordis",
        "width": 1280,
        "height": 800,
        "minWidth": 940,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "visible": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "notification": {}
  }
}
